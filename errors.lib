# Обработка ошибок
if [ ! "$L_ERRORS_LIB" == "LOADED" ]; then
L_ERRORS_LIB="LOADED"

. colors.lib

some_error(){
	COLOR=$3
	echo -e "${COLOR}[$1]${C_WHITE} $2${C_NONE}"
	#echo "[$1] $2"
}

fatal_error(){
	some_error 'FATAL' "$1" $C_RED
	exit 1
}

log_it(){
	some_error 'INFO' "$1" $C_WHITE
}

log_inprogress(){
	some_error '=>' "$1" $C_YELLOW
}

log_inprogress_complete(){
	echo -e "${T_UP}${C_YELLOW}[##]${C_WHITE}\033[60C[$1]${C_NONE}"
}

fi
